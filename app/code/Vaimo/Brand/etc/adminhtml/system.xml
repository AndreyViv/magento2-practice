<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="brand_config" translate="label" type="text"
                 sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Brand Module</label>
            <tab>catalog</tab>
            <resource>Vaimo_Brand::brand_config</resource>
            <group id="main_config" translate="label" type="text"
                   sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Main Configuration</label>
                <field id="enable" translate="label" type="select"
                       sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>